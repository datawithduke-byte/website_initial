---
import "../styles/theme.css";
const { title = 'Home', description = 'Podcast & portfolio hub', } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} â€¢ {import.meta.env?.SITE_NAME ?? 'Data With Duke'}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
  </head>
  <body>
    <header class="site">
      <div class="container" style="display:flex; align-items:center; justify-content:space-between; gap:16px;">
        <a href="/"><img class="logo" src="/brand/logo.svg" alt="Logo" /></a>
        <nav style="display:flex; gap:16px;">
          <a href="/episodes/">Episodes</a>
          <a href="/blog/">Blog</a>
          <a href="/about/">About</a>
          <a href="/contact/">Contact</a>
        </nav>
      </div>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer class="site">
      <div class="container">
        <p>&copy; <span id="year"></span> Your Brand. All rights reserved.</p>
      </div>
      <script>document.getElementById('year').textContent = new Date().getFullYear();</script>
    </footer>
  </body>
</html>
