---
import "../styles/theme.css";
const { title = 'Home', description = 'Podcast & portfolio hub' } = Astro.props;
import Header from "../components/Header.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} â€¢ {import.meta.env?.SITE_NAME ?? 'Data With Duke'}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
  </head>
  <body>
    <Header />

    <main class="container">
      <slot />
    </main>

    <footer class="site">
      <div class="container">
        <p>&copy; {new Date().getFullYear()} Data with Duke. All rights reserved.</p>
      </div>
    </footer>

    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous"
      src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v18.0">
    </script>
  </body>
</html>
